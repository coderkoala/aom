		<key time='0.20' brightness='0.0'/>
		<key time='0.65' brightness='0.0'/>
		<key time='0.70' brightness='1.0'/>
		<key time='0.75' brightness='0.5'/>
		<key time='0.80' brightness='1.0'/>
		<key time='0.85' brightness='0.0'/>
		<key time='0.90' brightness='0.8'/>
		<key time='0.95' brightness='0.0'/>
   </anim>

</lightning>

