<lightning>

   <width>0.3</width>
   <BranchWidth>0.1</BranchWidth>
   <segmentLength>0.5</segmentLength>

   <MinBranchLength>1.0</MinBranchLength>
   <MaxBranchLength>2.0</MaxBranchLength>
   <MaxBranchLengthFactor>2.0</MaxBranchLengthFactor>

   <material>
      <texture>sfx g lightning bolt</texture>
      <blend>additive</blend>
   </material>

   <MinPerturbAngle>10</MinPerturbAngle>
   <MaxPerturbAngle>50</MaxPerturbAngle>
